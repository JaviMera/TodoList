<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:id="@+id/todoTitleView"
        style="@style/TodoListTitle"
        tools:text="This is a todo list title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_body_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/totalItemsText"
            android:textSize="12sp"
            android:padding="10dp"
            style="@style/TodoListBodyLandscape"
            tools:text="0 Total Items..."/>

        <TextView
            android:id="@+id/completedItemsText"
            android:textSize="12sp"
            android:padding="10dp"
            style="@style/TodoListBodyLandscape"
            tools:text="0 Completed Items"/>

        <TextView
            android:id="@+id/incompletedItemsText"
            android:textSize="12sp"
            android:padding="10dp"
            style="@style/TodoListBodyLandscape"
            tools:text="0 Incompleted Items"/>

    </LinearLayout>

</LinearLayout>