<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/todoTitleView"
        style="@style/TodoListTitle"
        tools:text="This is a todo list title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_body_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/totalItemsText"
            android:transitionName="@string/todo_list_transition_name"
            style="@style/TodoListBodyPortrait"
            tools:text="0 Total Items..."/>

        <TextView
            android:id="@+id/completedItemsText"
            style="@style/TodoListBodyPortrait"
            tools:text="0 Completed Items"/>

        <TextView
            android:id="@+id/incompletedItemsText"
            style="@style/TodoListBodyPortrait"
            tools:text="0 Incompleted Items"/>

    </LinearLayout>
</LinearLayout>