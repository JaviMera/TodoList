<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_task_title"
        android:gravity="center"
        android:padding="15dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"/>

    <EditText
        android:id="@+id/taskEditTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dialog_task_hint"
        android:textStyle="italic"
        android:textColor="@android:color/darker_gray"
        android:layout_margin="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancelTaskView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_task_cancel_text"
            android:textColor="@android:color/white"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/addTaskView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_task_add_text"
            android:textColor="@android:color/white"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"/>
    </LinearLayout>
</LinearLayout>