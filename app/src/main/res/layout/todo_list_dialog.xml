<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialogTitleView"
        style="@style/DialogTitle"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_description"
            android:scaleType="fitCenter"
            android:padding="@dimen/item_body_pad_portrait"
            android:id="@+id/imageView" />

        <EditText
            android:id="@+id/todoListEditTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:layout_gravity="center"
            android:hint="@string/todo_list_title"
            android:textColorHint="@color/colorSecondary"
            style="@style/DialogEditText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancelDialog"
            style="@style/CancelButton"/>

        <Button
            android:id="@+id/addTaskView"
            style="@style/AddButton"/>
    </LinearLayout>
</LinearLayout>