<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogTodoList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Add To-do List Dialog Fragment -->

    <style name="DialogTodolistTitle" parent="DialogTodoList">
        <item name="android:textSize">@dimen/dialog_todo_list_title</item>
        <item name="android:padding">@dimen/dialog_todo_list_pad</item>
        <item name="android:text">@string/dialog_todo_list_title</item>
    </style>

    <style name="DialogTodolistEditText" parent="DialogTodoList">
        <item name="android:padding">@dimen/dialog_todo_list_pad</item>
        <item name="android:layout_margin">@dimen/dialog_todo_list_margin</item>
        <item name="android:hint">@string/dialog_todo_list_hint</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="DialogButtonContainer" parent="DialogTodoList">
        <item name="android:layout_margin">@dimen/dialog_todo_list_margin</item>
        <item name="android:paddingTop">@dimen/dialog_todo_list_pad</item>
        <item name="android:paddingBottom">@dimen/dialog_todo_list_pad</item>
    </style>

    <style name="DialogTodolistButton">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/dialog_todo_list_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">@dimen/dialog_todo_list_margin</item>
    </style>

    <style name="TodolistCancelButton" parent="DialogTodolistButton">
        <item name="android:text">@string/dialog_todo_list_cancel_text</item>
    </style>

    <style name="TodolistAddButton" parent="DialogTodolistButton">
        <item name="android:text">@string/dialog_todo_list_add_text</item>
    </style>

    <!-- To-do list item -->
    <style name="TodolistItemView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemTitle" parent="TodolistItemView">
        <item name="android:padding">@dimen/item_title_pad</item>
        <item name="android:textSize">@dimen/item_title_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/item_title_background</item>
    </style>

    <style name="ItemBody" parent="TodolistItemView">
        <item name="android:padding">@dimen/item_body_pad</item>
        <item name="android:textSize">@dimen/item_body_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">@drawable/item_body_background</item>
    </style>
</resources>
