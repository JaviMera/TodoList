<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="FragmentDialogTaskAnimations">
        <item name="android:windowEnterAnimation">@anim/slide_top_to_middle</item>
        <item name="android:windowExitAnimation">@anim/slide_middle_to_bottom</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogTodolistEditText">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:padding">@dimen/dialog_todo_list_pad</item>
        <item name="android:layout_margin">@dimen/dialog_todo_list_margin</item>
        <item name="android:hint">@string/dialog_todo_list_hint</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TodoListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TodoListTitle" parent="TodoListView">
        <item name="android:padding">@dimen/item_title_pad</item>
        <item name="android:textSize">@dimen/item_title_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/title_background</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TodoListBodyPortrait" parent="TodoListView">
        <item name="android:padding">@dimen/item_body_pad_portrait</item>
        <item name="android:textSize">@dimen/item_body_size_portrait</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TodoListBodyLandscape" parent="TodoListView">
        <item name="android:padding">@dimen/item_body_pad_land</item>
        <item name="android:textSize">@dimen/item_body_size_land</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="DialogButton">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_margin">@dimen/dialog_button_margin</item>
    </style>

    <style name="CancelButton" parent="DialogButton">
        <item name="android:text">@string/dialog_cancel_text</item>
    </style>

    <style name="AddButton" parent="DialogButton">
        <item name="android:text">@string/dialog_add_text</item>
    </style>

    <style name="OKButton" parent="DialogButton">
        <item name="android:text">@string/dialog_ok_text</item>
    </style>

    <style name="DialogTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dialog_title_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">@dimen/dialog_title_pad</item>
    </style>

    <style name="DialogEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_margin">@dimen/dialog_edit_text_margin</item>
    </style>
</resources>
